{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://paymatebackend.onrender.com/api/:path*"
    }
  ],
  "redirects": [
    { "source": "/old-route", "destination": "/new-route", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ]
}
